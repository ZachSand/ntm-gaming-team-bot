{
  "name": "ntm-gaming-team-bot",
  "script": "./build/src/bot.js",
  "watch": true,
  "max_memory_restart": "512M",
  "instances": "1",
  "exec_mode": "fork",
  "error_file": "./logs/errors_pm2.log",
  "out_file": "./logs/debug_pm2.log",
  "ignore_watch": [
    ".git",
    "logs",
    "databases",
    "node_modules",
    "npm-debug.log",
    "combined.log",
    "error.log"
  ],
  "watch_options": {
    "followSymlinks": false
  }
}